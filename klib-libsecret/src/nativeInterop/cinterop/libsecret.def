headers = libsecret/secret.h
package = org.gnome.libsecret

# Compiler options - dynamically obtained via pkg-config
compilerOpts.linux = -I/usr/include/libsecret-1 -I/usr/include/glib-2.0 -I/usr/lib/x86_64-linux-gnu/glib-2.0/include

# Linker options - dynamically obtained via pkg-config  
linkerOpts.linux = -lsecret-1 -lgobject-2.0 -lglib-2.0

# Type-safe enum mapping
strictEnums = SecretSchemaAttributeType SecretSchemaFlags SecretSearchFlags

# Disable auto string conversion, retain raw C pointer control
noStringConversion = secret_password_store_sync secret_password_lookup_sync secret_password_clear_sync

# User environment setup hint
userSetupHint = Ensure that libsecret-1-dev and glib-2.0 headers are installed on your system
